<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qr_linear_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skanQrMarker"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/fab" />

    <me.dm7.barcodescanner.zbar.ZBarScannerView
        android:id="@+id/zBarScannerIndoor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView" />

    <ImageButton
        android:id="@+id/goToIndoorList2"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/list_icon"
        android:rotation="180"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>